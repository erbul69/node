extends layouts/layout

block head
    title= "Login"

block scripts
    script(src="/js/signup.js")

block content
    .container
        form
            div(style="display:grid; width:400px; grid-template-columns: auto auto; gap:10px; margin-top:100px; margin-inline:auto")
                label Username
                input(name="username" type="text")
                label Name
                input(name="name" type="text")
                label Surname
                input(name="surname" type="text")
                label Email
                input(name="mail" type="text")
                label Password
                input(name="password" type="password")
                label Retype
                input(name="retry" type="password")
            
                div(style="grid-column: span 2; display:flex; justify-content: end; margin-top:10px")
                    input(type="submit" value="Send")

                div(class="errors" style="grid-column: span 2; color: orange")